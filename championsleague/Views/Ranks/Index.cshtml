@model IEnumerable<championsleague.Models.Rank>

@{
    ViewBag.Title = "Player Ranking";
}

<h2>Top 10 Players</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Player_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Team_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Player_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.player_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.player_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.player_Id })
        </td>
    </tr>
}

</table>
